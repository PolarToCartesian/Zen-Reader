{
	"manifest_version": 2,
	"name": "Zen Reader",
	"version": "0.9",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"other/browser_compatibility_api.js",
				"content_scripts/js/articleFormat.js",
				"content_scripts/js/fontScale.js"
			],
			"css": ["content_scripts/css/general.css"]
		}, {
			"matches": ["https://*.google.com/*", "https://*.google.fr/*"],
			"css": ["content_scripts/css/google.css"]
		}, {
			"matches": ["https://*.youtube.com/*"],
			"css": ["content_scripts/css/youtube.css"]
		}
	],
	"background": {
		"scripts": [
			"other/browser_compatibility_api.js",
			"background_scripts/setDefaultStorage.js",
			"background_scripts/contextMenus.js",
			"background_scripts/onInstall.js"
		]
	},
	"icons": {
		"128": "icons/icon128.png",
		"48":  "icons/icon48.png",
		"16":  "icons/icon16.png"
	},
	"browser_action": {
		"default_icon":  "icons/icon16.png",
		"default_popup": "popup/index.html"
	},
	"applications": {
		"gecko": {
		  "id": "zen@read.er"
		}
	},
	"permissions": [
		"contextMenus",
		"storage"
	]
}
