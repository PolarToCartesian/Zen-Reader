{
	"manifest_version": 2,
	"name": "Easy Read",
	"version": "0.5",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/js/articles.js", "content/js/fontScale.js"],
			"css": ["content/css/general.css"]
		}, {
			"matches": ["https://*.google.com/*", "https://*.google.fr/*"],
			"css": ["content/css/google.css"]
		}, {
			"matches": ["https://*.youtube.com/*"],
			"css": ["content/css/youtube.css"]
		}
	],
	"background": {
		"scripts": ["background/setDefaultStorage.js", "background/contextMenus.js"],
		"persistant": false
	},
	"icons": {
		"128": "images/icon128.png",
		"48":  "images/icon48.png",
		"16":  "images/icon16.png"
	},
	"browser_action": {
		"default_icon":  "images/icon16.png",
		"default_popup": "popup/index.html"
	},
	"permissions": [
		"contextMenus",
		"storage"
	]
}
