{
	"manifest_version": 2,
	"name": "Easy Read",
	"version": "0.5",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_js/articles.js"],
			"css": ["content_css/general.css"]
		}, {
			"matches": ["https://*.google.com/*", "https://*.google.fr/*"],
			"css": ["content_css/google.css"]
		}, {
			"matches": ["https://*.youtube.com/*"],
			"css": ["content_css/youtube.css"]
		}
	],
	"icons": {
		"128": "images/icon128.png",
		"48":  "images/icon48.png",
		"16":  "images/icon16.png"
	},
	"browser_action": {
		"default_icon":  "images/icon16.png",
		"default_popup": "popup/index.html"
	},
	"permissions": [
		"contextMenus",
		"storage"
	]
}
